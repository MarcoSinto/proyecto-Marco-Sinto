<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>sr_productos</servlet-name>
        <servlet-class>controlador.sr_productos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>sr_ventas</servlet-name>
        <servlet-class>controlador.sr_ventas</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>sr_marca</servlet-name>
        <servlet-class>controlador.sr_marca</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>sr_compras</servlet-name>
        <servlet-class>controlador.sr_compras</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>sr_productos</servlet-name>
        <url-pattern>/admin/Empleado/sr_productos</url-pattern>
        <url-pattern>/admin/Administrador/sr_productos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sr_ventas</servlet-name>
        <url-pattern>/admin/Empleado/sr_ventas</url-pattern>
        <url-pattern>/admin/Administrador/sr_ventas</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sr_marca</servlet-name>
        <url-pattern>/sr_marca</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sr_compras</servlet-name>
        <url-pattern>/admin/Empleado/sr_compras</url-pattern>
        <url-pattern>/admin/Administrador/sr_compras</url-pattern>
    </servlet-mapping>
</web-app>
